{
    "plugins": [
        "import"
    ],
    "env": {
        "node": true
    },
    "extends": ["airbnb"],
    "parserOptions": {
        "ecmaVersion": 6,
        "ecmaFeatures": {}
    },
    "rules": {
        "callback-return": 2,
        "handle-callback-err": 2,
        "hapi/hapi-capitalize-modules": 0,
        "indent": ["error", 4],
        "no-console": 1,
        "no-debugger": 1,
        "no-unused-vars": "warn",
        "valid-jsdoc": ["warn", { "requireReturn": false }],
        "comma-dangle": ["error", "never"],
        "max-len": ["error", {
            "ignoreComments": true,
            "code": 250
        }],
        "no-useless-return": 0,
        "arrow-body-style": "off",
        "linebreak-style": 0,
        "prefer-arrow-callback": "warn"
    }
}